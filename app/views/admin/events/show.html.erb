<div class="col-lg-12 mt-5">
  <div class="card mb-3">
    <div class="card-body text-dark">
      <h5 class="card-title">Name</h5>
      <p class="card-text"><%= @event.name %></p>
      <hr>
      <h5 class="card-title">Description</h5>
      <p class="card-text"><%= @event.description %></p>
      <hr>
      <h5 class="card-title">Start date</h5>
      <p class="card-text"><%= @event.start_date %></p>
      <hr>
      <h5 class="card-title">End date</h5>
      <p class="card-text"><%= @event.end_date %></p>
      <hr>
      <h5 class="card-title">Start time</h5>
      <p class="card-text"><%= @event.start_time %></p>
      <hr>
      <h5 class="card-title">End time</h5>
      <p class="card-text"><%= @event.end_time %></p>
      <hr>
      <h5 class="card-title">Total sits</h5>
      <p class="card-text"><%= @event.total_sits %></p>
      <hr>
      <h5 class="card-title">Remaining_sits</h5>
      <p class="card-text"><%= @event.remaining_sits %></p>
      <hr>
      <h5 class="card-title">Entrance fee</h5>
      <p class="card-text"><%= @event.entrance_fee %></p>
    </div>
  </div>
  <%= link_to "Back", admin_events_path, class: 'btn btn-dark'%>
</div>