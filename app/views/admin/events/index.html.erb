<div class="col-lg-12 mt-5">
  <div class="card mt-5 mb-2">
    <div class="card-body">
      <%= search_form_for @q, url: admin_events_path do |f| %>
        <h4>Search from Events Attributes</h4>
        <div class="row mt-3 mb-3">
          <div class="col-lg-4">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.search_field :name_cont, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-group">
              <%= f.label :start_date_equals %>
              <%= f.date_field :start_date_eq, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="form-group">
              <%= f.label :end_date_equals %>
              <%= f.date_field :end_date_eq, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>
        </div>

        <%= f.submit class: "btn btn-primary mt-4" %>
        <%= link_to "Reset Search", admin_events_path, class: "btn btn-primary mt-4" %>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to "New Event", new_admin_event_path, class: "btn btn-primary mt-4"%>   
  </div>
  <table class="table table-bordered mt-4">
    <thead>
      <tr>
        <th>Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, admin_event_path(event) %></td>
          <td>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                Actions
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                <li><%= link_to "View", admin_event_path(event), class: "dropdown-item" %></li>
                <li><%= link_to "Delete", admin_event_path(event), class: "dropdown-item", data: { confirm: 'Are you sure you want to delete this event?', method: :delete } %></li>
              </ul>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>