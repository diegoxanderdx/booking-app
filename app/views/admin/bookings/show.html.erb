<div class="col-lg-12 mt-5">
  <%= link_to "Back to Dashboard", admin_dashboard_path, class: "btn btn-primary shadow" %>
  <%= link_to "View All Bookings", admin_bookings_path, class: "btn btn-primary shadow" %>
  <div class="row mt-5">
    <div class="col-lg-7">
      <div class="card shadow">
        <div class="card-body">
          <h4 class="card-title"><%= @event.name %></h4>
          <p class="lead"><%= @event.description %></p>
          <h4><span class="badge bg-primary"><%= @event.total_duration%></span></h4>
          <p class="lead"> Total Sits: <span class="badge bg-primary"><%= @event.total_sits %></span></p>
          <p class="lead"> Remaining Sits: <span class="badge bg-primary"><%= @event.remaining_sits %></span></p>
          <p class="lead"> Entrance Fee: <span class="badge bg-primary"><%= @event.entrance_fee %></span></p>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="card shadow">
        <div class="card-body">
          <h4 class="card-title">Customer Details</h4>
          <hr>
          <p class="lead"><strong>Name: </strong><%= @customer.full_name %></p>
          <p class="lead"><strong>Email: </strong><%= @customer.email %></p>
          <p class="lead"><strong>Contact No.</strong><%= @customer.contact_number %></p>
        </div>
      </div>
    </div>
  </div>
</div>